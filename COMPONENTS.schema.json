{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Component Inventory Schema",
  "description": "Schema for per-repo component inventory",
  "type": "object",
  "required": [
    "schemaVersion",
    "repo",
    "components"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "description": "Schema version for the inventory format"
    },
    "repo": {
      "type": "object",
      "required": [
        "name",
        "root",
        "lastUpdated"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "root": {
          "type": "string"
        },
        "lastUpdated": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "components": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "type",
          "description",
          "ownerName",
          "status",
          "version",
          "standalone",
          "location",
          "interfaces",
          "dependencies"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "service",
              "package",
              "ui",
              "prompt",
              "doc",
              "workflow",
              "other"
            ]
          },
          "description": {
            "type": "string"
          },
          "ownerName": {
            "type": "string"
          },
          "ownerId": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "active",
              "beta",
              "deprecated"
            ]
          },
          "version": {
            "type": "string"
          },
          "standalone": {
            "type": "boolean",
            "description": "True if this component is portable and self-contained with its own docs."
          },
          "location": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string"
            }
          },
          "interfaces": {
            "type": "object",
            "required": [
              "inputs",
              "outputs"
            ],
            "properties": {
              "inputs": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "outputs": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "preview": {
            "type": "object",
            "description": "Preview metadata for read-only rendering",
            "properties": {
              "import": {
                "type": "string",
                "description": "Module path to render"
              },
              "props": {
                "type": "object",
                "description": "Default props for preview"
              },
              "thumbnail": {
                "type": "string",
                "description": "Optional thumbnail path or URL"
              }
            }
          },
          "edit": {
            "type": "object",
            "description": "Optional editor entry metadata",
            "properties": {
              "entry": {
                "type": "string",
                "description": "Editor entry point or route"
              },
              "instructions": {
                "type": "string",
                "description": "Short editing guidance"
              }
            }
          },
          "export": {
            "type": "object",
            "description": "Optional export metadata",
            "properties": {
              "paths": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "dependencies": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "bundle": {
                "type": "string",
                "description": "Optional export bundle name"
              }
            }
          }
        }
      }
    }
  }
}
